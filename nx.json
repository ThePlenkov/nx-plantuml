{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "namedInputs": {
    "noop":["!{projectRoot}/**/*"],
    "puml": [
      "{projectRoot}/docs/**/*.puml"
    ]
  },
  "targetDefaults": {
    "default":{
      "inputs": ["noop"]
    },
    "puml": {
      "cache": true ,
      "inputs": [
        "puml"
      ],
      "outputs": ["{projectRoot}/docs/puml/img"]

    },
    "build" :{
      "executor": "nx:noop",
      "cache": true,
      "inputs": ["noop"],
      "dependsOn": ["puml"]
    }
  }
}
